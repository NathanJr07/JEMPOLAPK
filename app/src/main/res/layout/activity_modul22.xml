<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:id="@+id/module22">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Judul -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pencatatan Keuangan Sederhana (Arus Kas, Laba Rugi)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Paragraf pembuka -->
        <TextView
            android:id="@+id/openingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meski usaha masih kecil, pencatatan keuangan adalah kebiasaan penting yang harus diterapkan sejak awal. Dua jenis catatan dasar yang perlu dimiliki adalah:"
            android:textSize="16sp"
            android:textColor="#424242"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp" />

        <!-- Subjudul Arus Kas -->
        <TextView
            android:id="@+id/cashFlowTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Catatan Arus Kas (Cash Flow):"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/cashFlowDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mencatat semua uang yang masuk dan keluar setiap hari. Ini membantu mengetahui kondisi kas bisnis secara real-time dan menghindari kekurangan dana mendadak."
            android:textSize="16sp"
            android:textColor="#424242"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp" />

        <!-- Subjudul Laba Rugi -->
        <TextView
            android:id="@+id/profitLossTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Catatan Laba Rugi:"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/profitLossDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mencatat pendapatan dikurangi dengan total biaya untuk menghitung apakah bisnis mengalami keuntungan atau kerugian dalam periode tertentu. Ini bisa dilakukan bulanan untuk evaluasi performa usaha."
            android:textSize="16sp"
            android:textColor="#424242"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp" />

        <!-- Penutup -->
        <TextView
            android:id="@+id/conclusionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dengan pencatatan sederhana tapi konsisten, pengusaha bisa mengambil keputusan berdasarkan data, bukan asumsi."
            android:textSize="16sp"
            android:textColor="#424242"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp" />

    </LinearLayout>
</ScrollView>
