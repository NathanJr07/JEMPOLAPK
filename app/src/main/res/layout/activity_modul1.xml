<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    android:id="@+id/module1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header Image (responsive with aspect ratio) -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:contentDescription="Ilustrasi Wirausahawan"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:maxHeight="300dp"
            android:src="@drawable/modul1" />

        <!-- Judul Utama -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pengertian dan Ciri Wirausahawan"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppinsbold"
            android:textColor="#1F2937"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Card: Pengertian -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="16dp"
            android:backgroundTint="@color/primarycolor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengertian"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppinssemibold"
                    android:textColor="@color/black"
                    android:paddingBottom="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wirausahawan adalah seseorang yang menciptakan dan menjalankan suatu usaha dengan tujuan menghasilkan nilai tambah, baik dalam bentuk produk maupun layanan, serta berani mengambil risiko dalam prosesnya. Mereka bukan hanya mencari keuntungan pribadi, tetapi juga menciptakan lapangan kerja, inovasi, dan solusi bagi pasar."
                    android:textSize="16sp"
                    android:textColor="#374151"
                    android:lineSpacingExtra="6dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card: Ciri-Ciri -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:cardCornerRadius="16dp"
            android:backgroundTint="@color/primarycolor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ciri-Ciri Wirausahawan"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppinssemibold"
                    android:textColor="@color/black"
                    android:paddingBottom="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Mandiri\n2. Berani mengambil risiko\n3. Berpikir kreatif\n4. Gigih dan semangat tinggi\n5. Proaktif melihat peluang\n6. Tidak takut gagal dan belajar dari kesalahan\n7. Terbuka terhadap perubahan\n8. Melihat tantangan sebagai peluang"
                    android:textSize="16sp"
                    android:textColor="#374151"
                    android:lineSpacingExtra="6dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
