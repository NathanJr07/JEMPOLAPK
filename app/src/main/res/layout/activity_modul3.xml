<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    android:id="@+id/module3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Judul -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perbedaan Wirausaha vs. Pekerja"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppinsbold"
            android:textColor="#1F2937"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- CardView Konten -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="16dp"
            android:backgroundTint="@color/primarycolor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Konten Utama -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Meski sama-sama bekerja untuk mendapatkan penghasilan, wirausaha dan pekerja memiliki pendekatan dan pola pikir yang berbeda. Seorang pekerja biasanya bekerja untuk orang lain atau perusahaan, dengan tugas dan jam kerja yang telah ditentukan. Fokus mereka adalah menyelesaikan pekerjaan sesuai arahan, dan mendapatkan gaji tetap sebagai imbalan."
                    android:textSize="16sp"
                    android:textColor="#374151"
                    android:lineSpacingExtra="6dp"
                    android:paddingBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sebaliknya, wirausahawan bekerja untuk dirinya sendiri dan membangun sistem usaha yang bisa memberikan nilai berkelanjutan. Mereka tidak hanya bekerja, tetapi menciptakan pekerjaan bagi orang lain. Risiko dan tanggung jawab jauh lebih besar, karena pengusaha harus mengelola keuangan, operasional, pemasaran, bahkan sumber daya manusia."
                    android:textSize="16sp"
                    android:textColor="#374151"
                    android:lineSpacingExtra="6dp"
                    android:paddingBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dalam hal pola pikir, pekerja cenderung mencari keamanan dan stabilitas, sedangkan wirausahawan lebih berani mengambil risiko demi peluang yang lebih besar. Namun, bukan berarti salah satu lebih baik dari yang lain. Keduanya punya kelebihan masing-masing. Yang penting adalah memahami karakter dan tujuan hidup pribadi sebelum memilih jalur karier."
                    android:textSize="16sp"
                    android:textColor="#374151"
                    android:lineSpacingExtra="6dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
