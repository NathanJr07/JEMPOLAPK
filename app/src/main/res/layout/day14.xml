<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingBottom="50dp"> <!-- Tambahan padding bawah -->

    <!-- Gambar Header -->
    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:src="@drawable/hari14" />

    <!-- ScrollView dengan konten CardView -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="96dp"> <!-- Jaga jarak dari tombol selesai -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="240dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="32dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Header Card -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#50C2C9"
                        android:padding="24dp">

                        <TextView
                            android:id="@+id/tvChallengeHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="4dp"
                            android:text="ðŸ“¢ Tantangan Promosi â€“ Hari 14\n\nTema Hari Ini: â€œRefleksi dan Growthâ€\n\nTujuan Tantangan:\nMerefleksikan perjalanan selama 14 hari promosi dan menunjukkan perkembangan bisnismu kepada audiens."
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDDDDD" />

                    <!-- Konten Card -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="24dp">

                        <TextView
                            android:id="@+id/tvChallengeSteps"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“ŒLangkah-langkah:\n1. Buat konten refleksi tentang perjalanan promosi selama 14 hari ini.\n2. Ceritakan:\n- Perubahan yang dirasakan\n- Hal yang dipelajari\n- Peningkatan engagement atau awareness\n\nðŸŽ¨ Format Konten:\n- Story/video berbicara langsung (talking head)\n- Carousel dengan before-after\n- Caption panjang sebagai bentuk cerita\n\nðŸŒ± Tambahan:\nAjak audiens untuk terus mendukung, dan sampaikan rencana ke depan untuk bisnis kamu!"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:lineSpacingExtra="4dp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Tombol Selesai (Tetap di bawah layar) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSelesai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Selesai"
            android:textAllCaps="false"
            android:backgroundTint="#50C2C9"
            android:textColor="@android:color/white"
            android:elevation="6dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnBatal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Batal"
            android:textAllCaps="false"
            android:backgroundTint="@color/red"
            android:textColor="@android:color/white"
            android:elevation="6dp" />
    </LinearLayout>

</FrameLayout>