<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingBottom="50dp"> <!-- Tambahan padding bawah -->

    <!-- Gambar Header -->
    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:src="@drawable/hari12" />

    <!-- ScrollView dengan konten CardView -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="96dp"> <!-- Jaga jarak dari tombol selesai -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="240dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="32dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Header Card -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#50C2C9"
                        android:padding="24dp">

                        <TextView
                            android:id="@+id/tvChallengeHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="4dp"
                            android:text="ðŸ“¢ Tantangan Promosi â€“ Hari 12\n\nTema Hari Ini: â€œReview Produk Sendiriâ€\n\nTujuan Tantangan:\nMembangun kepercayaan dengan membagikan sudut pandang pribadi terhadap produk/jasa yang kamu jual."
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDDDDD" />

                    <!-- Konten Card -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="24dp">

                        <TextView
                            android:id="@+id/tvChallengeSteps"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“ŒLangkah-langkah:\n1. Ceritakan pengalaman kamu sendiri saat menggunakan produk/jasa yang kamu jual.\n2. Jelaskan:\n- Fitur yang paling kamu suka\n- Manfaat apa yang paling terasa bagi kamu\n- Kenapa kamu bangga dengan produk ini\n\nðŸŽ¥ Format Konten:\n- Video singkat review atau unboxing\n- Foto produk + caption jujur dari sisi kamu sebagai pemilik sekaligus pengguna\n\nðŸ’¬ Tips:\nGunakan gaya cerita yang ringan dan autentik agar lebih relatable untuk audiens."
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:lineSpacingExtra="4dp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Tombol Selesai (Tetap di bawah layar) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSelesai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Selesai"
            android:textAllCaps="false"
            android:backgroundTint="#50C2C9"
            android:textColor="@android:color/white"
            android:elevation="6dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnBatal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Batal"
            android:textAllCaps="false"
            android:backgroundTint="@color/red"
            android:textColor="@android:color/white"
            android:elevation="6dp" />
    </LinearLayout>

</FrameLayout>